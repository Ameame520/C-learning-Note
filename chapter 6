练习6-3 英文字母替换加密（大小写转换+后移1位）
  #include<stdio.h>
int main(void)
{
    //65-90 A-Z, 97-122 a-z
    char c,d;
    scanf("%c",&c);
    while(c!='\n'){
        //加密规则
        if(c>=97&&c<=121){d=c-31;}
        else if(c>=65&&c<=89){d=c+33;}
        else if(c=='z'){d='A';}
        else if(c=='Z'){d='a';}
        else {d=c;}
        printf("%c",d);
        scanf("%c",&c);
    }
    printf("\n"); 
}

习题6-7 简单计算器
分数 20
#include<stdio.h>
//借鉴答案
int main(){
    int a,sum;
    char c;
    scanf("%d",&sum);//第一个输入是sum
    while((c=getchar())!='='){//之后的输入一定是符号
        scanf("%d",&a);//再之后一定是数字.
        switch(c){ //
            case '+':sum+=a;break;
            case '-':sum-=a;break;
            case '*':sum*=a;break;
            case '/':
                if(a==0){
                    printf("ERROR");
                    return 0;
                }
                else sum/=a;
                break;
            default:printf("ERROR");
                    return 0;
        }
    }
    printf("%d",sum);
    return 0;
}

